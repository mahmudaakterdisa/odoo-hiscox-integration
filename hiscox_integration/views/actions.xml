<odoo>
    <!-- Hiscox Cases Action -->
    <record id="action_hiscox_case_list" model="ir.actions.act_window">
        <field name="name">Hiscox Cases</field>
        <field name="res_model">edited.hiscox.case</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>
                Manage customer cases submitted to Hiscox.
                Click "New" to add a new case.
            </p>
        </field>
    </record>

</odoo>

